{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types/"
        ],
        "outDir": "dist-unbundled"
    },
    "files": [
        "front/app.module.ts",
        "admin/app.module.ts",
        "front/main-aot.ts",
        "admin/main-aot.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "angularCompilerOptions": {
        "genDir": "dist-factory",
        "skipMetadataEmit": true
    }
}